</head>
<body>
    <!-- ADD YOUR GALLERY HERE -->



    <!-- ADD YOUR GALLERY ENDS -->
    

    <!-- HERO SECTION STARTS -->
    <div class="container-fluid bg-light py-3" id="info-header">
        <div class="row">
            <!-- -->
            <div class="col-6 text-center mt-5">
                <h2 class="display-4 mt-5">
                    Graphic Era Educational<br>
                    Society 
                </h2>
                <h3 class="display-5">
                    Donation Request Form
                </h3>
            </div>

            <!-- SIDE IMAGE SECTION -->
            <div class="col-6">
                <!-- ADD IMAGE PART HERE -->
                Image will be here
            </div>
        </div>
    </div>
    <!-- HERO SECTION ENDS -->

    <div class="container">
        <div class="row">
            <div class="col-7">
                <span class="label">Name : </span>
                <span class="value">Graphic Era Educational Society</span>
            </div>
            <div class="col-7">
                <span class="label">A/C No : </span>
                <span class="value">1175002100006614</span>
            </div>
            <div class="col-7">
                <span class="label">IFSC Code : </span>
                <span class="value">PUNB0602000</span>
            </div>
            <div class="col-7">
                <span class="label">Bank : </span>
                <span class="value">PUNJAB NATIONAL BANK</span>
            </div>
            <div class="col-7">
                <span class="label">Branch : </span>
                <span class="value">Clement Town, Dehradun</span>
            </div>
        </div>
    </div>


    
    <!-- FORM FOR SUBMITTING INFO STARTS-->
    <div class="container mt-5">
        <div class="row">
            <div class="col-10">
                <form action="/submit-info" method="POST">

                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>

                    <div class="form-group">
                        <label for="pan">Pan</label>
                        <input type="text" class="form-control" id="pan" name="pan">
                    </div>

                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" id="address" name="address">
                    </div>

                    <div class="form-group">
                        <label for="amount">Amount</label>
                        <input type="text" class="form-control" id="amount" name="amount">
                    </div>

                    <div class="form-group">
                        <label for="phoneNo">Contact</label>
                        <input type="text" class="form-control" id="phoneNo" name="phoneNo" placeholder="Enter 10 digit phone number">
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email">
                    </div>

                    <div class="form-group pl-3">
                        <label for="email">Mode of Payment</label>
                        <div class="radio">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="mode" value="Cash" checked>Cash (not more than Rs. 2,000)
                            </label>
                        </div>
                        <div class="radio">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="mode" value="Cheque / DD / Pay order">Cheque / DD / Pay order (to be drawn in favour of 'Graphic Era Educational Society'
                            </label>
                        </div>
                        <div class="radio">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="mode" value="Online Transfer">Online Transfer
                            </label>
                        </div>
                        <div class="radio">
                            <label class="form-check-label">
                                <input type="radio" id="modal-radio-button" class="form-check-input" name="mode" value="UPI">UPI
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="paymentRef">Payment reference no. (UTR no. / cheque / DD / pay order no. date and bank)</label>
                        <input type="text" class="form-control" id="paymentRef" name="paymentRef">
                    </div>

                    <div class="form-group">
                        <label for="purpose">Purpose of Donation</label>
                        <input type="text" class="form-control" id="purpose" name="purpose">
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Submit Info" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- FORM FOR SUBMITTING INFO ENDS -->





    <!-- UPI MODAL STARTS -->
    <div class="modal fade" id="upiModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">GEU UPI</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body text-center py-3">
              <img height="400px" width="400px" class="img img-fluid" src="img/upi.jpeg">
            </div>
          </div>
        </div>
      </div>
    <!-- UPI MODAL ENDS -->







